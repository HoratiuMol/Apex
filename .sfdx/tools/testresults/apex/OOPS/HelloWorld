public class HelloWorld{
    private String greeting=('Hello Wordl');
    public String publicGreeting='My public Greetin';

    ///methods must have a return, alwais
    //this makes u get an aerror about modifiers
   /*global void printPublicGreeting(){
        //if we dont make it publi we won't see it
        System.debug(publicGreeting);
        //void returns "null"
        //we call this methjod from the devconsole
    }*/
    public void printGreeting(){
        System.debug(greeting);
    }
    public void printGoodMorning(){
        System.debug(greeting);
    }
    public void printGoodAfternoon(){
        System.debug(greeting);
    }
    public void printGoodEvening(){
        System.debug(greeting);
    }
    public void printMessage(String msg){
        System.debug(msg);
    }

    public String getDay(Integer dayNumber){
        String dayString='';

        switch on daynumber{
            when 0{
                dayString='Sunday';
            }
            when 1{
                dayString='Monday';
            }
            when 2{
                dayString='Tuesday';
            }
            when 3{
                dayString='Wednesday';
            }
            when 4{
                dayString='Thursday';
            }
            when 5{
                dayString='Friday';
            }
            when else{
                dayString='Saturday';
            }
        }
        return dayString;
    }
}