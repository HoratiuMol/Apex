    }

    public String getDay(Integer dayNumber){
        String dayString='';

        switch on daynumber{
            when 0{
                dayString='Sunday';
            }
            when 1{
                dayString='Monday';
            }
            when 2{
                dayString='Tuesday';
            }
            when 3{
                dayString='Wednesday';
            }
            when 4{
                dayString='Thursday';
            }
            when 5{
                dayString='Friday';
            }
            when 6{
                dayString='Saturday';
            }when else{
                dayString='Invalid day number';
            }
        }
        return dayString;
    }
    //Polymorphgic method
    public String getDay(String dayName){
        String dayString='';

        switch on daynumber{
            when 'Sunday'{
                dayString='Sunday';
            }
            when 'Monday'{
                dayString='Monday';
            }
            when 'Tuesday'{
                dayString='Tuesday';
            }
            when 'Wednesday'{
                dayString='Wednesday';
            }
            when 'Thursday'{
                dayString='Thursday';
            }
            when 'Friday'{
                dayString='Friday';
            }
            when 'Saturday'{
                dayString='Saturday';
            }when else{
                dayString='Invalid day Name';
            }
        }
