//capitalize String
System.debug('Contains ring?' + str.capitalize('ring'));
//cotains String
System.debug('Contains ring?' + str.contains('ring'));
//upper case String
System.debug('Contains ring?' + str.toUpperCase('ring'));
//low case String
System.debug('Contains ring?' + str.toLowerCase('ring'));
//string apex class reference
// https://developer.salesforce.com/docs/atlas.en-us.apexref.meta/apexref/apex_methods_system_string.htm

//split
System.debug('Split by space: ' + str.split(' '));

